<?xml version="1.0" encoding="utf-8"?>
<Task>
	<!-- reference task information -->
	<Reference>
		<Author>
			<name>Maciej Stefa≈Ñczyk</name>
			<link></link>
		</Author>
		
		<Description>
			<brief>Simple PCL viewer</brief>
			<full>Simple PCL viewer, using Kinect as source of depth data.</full>	
		</Description>
	</Reference>
	
	<!-- task definition -->
	<Subtasks>
		<Subtask name="Processing">
			<Executor name="Exec1"  period="0.1">
				<Component name="Source" type="PCL:JSONReader" priority="1" bump="0">
					<param name="filename">/home/mlaszkow/pcd/test.json</param>
				</Component>

			</Executor>
			<Executor name="Visualization" period="0.2">
				<Component name="WindowPCL" type="PCL:CloudViewer" priority="1" bump="10">
				</Component>
			</Executor>
		</Subtask>		
	</Subtasks>
	
	<!-- connections between events and handelrs -->
	<Events>
	</Events>
	
	<!-- pipes connecting datastreams -->
	<DataStreams>	
		<Source name="Source.out_cloud_xyz">
			<sink>WindowPCL.in_cloud_xyz</sink>		
		</Source>		
	</DataStreams>
</Task>




