<Task>
	<!-- reference task information -->
	<Reference>
		<Author>
			<name>Tomasz Kornuta</name>
			<link></link>
		</Author>
		
		<Description>
			<brief>ecovi:t1/SequenceViewer</brief>
			<full>Loads and displays a sequence of images</full>	
		</Description>
	</Reference>
	
	<!-- task definition -->
	<Subtasks>
		<Subtask name="Main">
			<Executor name="Processing"  period="2">
				<Component name="SequenceRGB" type="CvBasic:Sequence" priority="1" bump="0">
					<param name="sequence.directory">/home/mlaszkow/obiekty/apple</param>
					<param name="sequence.pattern">.*\_color.png</param>
					
				</Component>

			</Executor>

			<Executor name="Visualization" period="0.2">
				<Component name="Window" type="CvBasic:CvWindow" priority="1" bump="0">
					<param name="count">1</param>
					<param name="title">Window</param>
				</Component>

			</Executor>
		</Subtask>	
	
	</Subtasks>
	
	<!-- pipes connecting datastreams -->
	<DataStreams>
		<Source name="SequenceRGB.out_img">
			<sink>Window.in_img</sink>	
		</Source>

	</DataStreams>
</Task>




